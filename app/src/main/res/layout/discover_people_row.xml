<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#00ffffff"
    android:layout_margin="4dp">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#181717"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:id="@+id/post_photo"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder_image"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subscribeBtn"
            android:layout_toRightOf="@+id/post_photo"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_name"
                android:textSize="16dp"
                android:scaleType="fitXY"
                android:textStyle="bold"
                android:text="Booker Webi"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="15dp"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@+id/post_name"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_validate"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/follow_btn_lay"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:background="@drawable/mybutton"
                android:text="Following"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:src="@drawable/following_btn"
                android:padding="2dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="top"
                android:id="@+id/unfollowBtn" />


            <Button
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:background="@drawable/mybutton_grey"
                android:text="Follow"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:padding="2dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="top"
                android:id="@+id/followBtn" />

        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>