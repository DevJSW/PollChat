<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pollchat.pollchat.CreatepollchatActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="#00ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/post_userimg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="65"
                            android:id="@+id/poll_question"
                            android:hint="Poll Question:"/>

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="20dp"
                android:background="#716f6f"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/input_first_row_userimg"
                android:src="@drawable/placeholder_image"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_lay"
                android:layout_toRightOf="@+id/input_first_row_userimg"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="25"
                    android:id="@+id/input_first_row_username"
                    android:hint="Name:"/>

            </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Votes: 0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/first_row_vote_txt"
                    android:visibility="gone"
                    android:textStyle="italic"
                    android:layout_toRightOf="@+id/input_first_row_userimg"
                    android:layout_below="@+id/name_lay"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/first_row_voteBtn"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_vote_blue"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="20dp"
                android:background="#716f6f"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Vs"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="20dp"
                android:background="#716f6f"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/input_second_row_userimg"
                    android:src="@drawable/placeholder_image"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name2_lay"
                    android:layout_toRightOf="@+id/input_second_row_userimg"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="25"
                        android:id="@+id/input_second_row_username"
                        android:hint="Name:"/>


                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Votes: 0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/second_row_vote_txt"
                    android:visibility="gone"
                    android:textStyle="italic"
                    android:layout_toRightOf="@+id/input_second_row_userimg"
                    android:layout_below="@+id/name2_lay"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/second_row_voteBtn"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_vote_blue"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="20dp"
                android:background="#716f6f"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/addrowBtn"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_add_row"/>


        </LinearLayout>


    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textColor="#ffffff"
        android:background="@color/colorAccent"
        android:id="@+id/startPollBtn"
        android:layout_alignParentBottom="true"
        android:text="Start Poll"/>

</RelativeLayout>
