<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/placeholder_image"
                android:background="#00ffffff"
                android:padding="2dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="top"
                android:id="@+id/post_phot" />


            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/placeholder_image"
                android:background="#00ffffff"
                android:padding="2dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="top"
                android:id="@+id/post_image" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Poll Question"
                android:id="@+id/poll_question"
                android:textSize="16dp"
                android:paddingTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#807d7d"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/first_row"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/first_row_userimg"
                    android:src="@drawable/placeholder_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/first_row_userimg"
                    android:id="@+id/first_row_username"
                    android:layout_marginLeft="5dp"
                    android:text="Name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_toRightOf="@+id/first_row_userimg"
                    android:layout_below="@+id/first_row_username"
                    android:id="@+id/first_row_vote"
                    android:layout_marginLeft="5dp"
                    android:textStyle="italic"
                    android:text="Votes:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_toRightOf="@+id/first_row_vote"
                    android:layout_below="@+id/first_row_username"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:id="@+id/first_row_votecounter" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_vote_blue"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/first_row_voteBtn" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#807d7d"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:id="@+id/secnd_row">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/second_row_userimg"
                    android:src="@drawable/placeholder_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/second_row_userimg"
                    android:id="@+id/second_row_username"
                    android:layout_marginLeft="5dp"
                    android:text="Name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_toRightOf="@+id/second_row_userimg"
                    android:layout_below="@+id/second_row_username"
                    android:id="@+id/second_row_vote"
                    android:layout_marginLeft="5dp"
                    android:textStyle="italic"
                    android:text="Votes:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_toRightOf="@+id/second_row_vote"
                    android:layout_below="@+id/second_row_username"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:id="@+id/second_row_votecounter" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_vote_blue"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/second_row_voteBtn" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#807d7d"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/third_row_userimg"
                    android:src="@drawable/placeholder_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/third_row_userimg"
                    android:id="@+id/third_row_username"
                    android:layout_marginLeft="5dp"
                    android:text="Name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_toRightOf="@+id/third_row_userimg"
                    android:layout_below="@+id/third_row_username"
                    android:id="@+id/third_row_vote"
                    android:layout_marginLeft="5dp"
                    android:textStyle="italic"
                    android:text="Votes:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_toRightOf="@+id/third_row_vote"
                    android:layout_below="@+id/third_row_username"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:id="@+id/third_row_votecounter" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_vote_blue"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/third_row_voteBtn" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#807d7d"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/fourth_row_userimg"
                    android:src="@drawable/placeholder_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/fourth_row_userimg"
                    android:id="@+id/fouth_row_username"
                    android:layout_marginLeft="5dp"
                    android:text="Name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_toRightOf="@+id/fourth_row_userimg"
                    android:layout_below="@+id/fouth_row_username"
                    android:id="@+id/fourth_row_vote"
                    android:layout_marginLeft="5dp"
                    android:textStyle="italic"
                    android:text="Votes:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_toRightOf="@+id/fourth_row_vote"
                    android:layout_below="@+id/fouth_row_username"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:id="@+id/fourth_row_votecounter" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_vote_blue"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/fourth_row_voteBtn" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#807d7d"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Votes:"
                android:id="@+id/total_votes"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="5dp"
                android:id="@+id/total_vote_count"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This pollchat was created on "
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginTop="5dp"
                    android:id="@+id/created_date"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" &amp; closes"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginTop="5dp"
                    android:id="@+id/close_date"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>